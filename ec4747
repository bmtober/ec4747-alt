
# Run this script in the directory that has the SPAMTrain.label file.

checkscript ()
{
  # confirm that a script file is visible in path
  which "$1" &> /dev/null
  [ $? -ne 0 ]  && echo "$1 not found in path" && exit
}

checkscript "vcosine"
checkscript "vdot"
checkscript "vmag"
checkscript "vscale"
checkscript "vsum"
checkscript "vtfidf"
checkscript "vunit"
checkscript "pairs"
checkscript "body"

rm *.acc

for i in {0..40}
do
  export threshold=$(bc -l <<< "$i/20")
  rm *.csv
  make acc
done

